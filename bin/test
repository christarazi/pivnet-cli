#!/bin/env bash

set -eu

# In seconds
SLOW_SPEC_THRESHOLD="${SLOW_SPEC_THRESHOLD:-60}"

my_dir="$( cd "$( dirname "${0}" )" && pwd )"
base_dir="$( cd "${my_dir}/.." && pwd )"

pushd "${base_dir}" > /dev/null
  CGO_ENABLED=1 ginkgo \
    -r \
    -race \
    -p \
    -randomizeAllSpecs \
    -randomizeSuites \
    -keepGoing \
    -slowSpecThreshold="${SLOW_SPEC_THRESHOLD}" \
    "$@"
popd > /dev/null

